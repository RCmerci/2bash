(jbuild_version 1)

(rule
 ((targets (parser.mli parser.ml))
  (deps (parser.mly))
  (action (run menhir --external-tokens Syntax --explain ${<}))))

(rule
 ((targets (lexer.ml))
  (deps (lexer.mll))
  (action (ignore-stdout (run ocamllex ${<})))))

(library
 ((name sbash_lib)
  (libraries (core
  	      ppx_deriving))
  (preprocess (pps (ppx_deriving.std)))
  ))
